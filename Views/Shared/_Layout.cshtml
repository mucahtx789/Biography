<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biography</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">

    <!-- site.css (varsa) -->
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        :root {
            --brand-1: #7c4dff;
            --brand-2: #00bcd4;
            --accent: #ffdd57;
            --ink: #1d2230;
            --bg: #f6f8fb;
        }

        html, body {
            height: 100%;
        }

        body {
            font-family: 'Poppins',sans-serif;
            background: var(--bg);
            color: var(--ink);
            overflow-x: hidden;
        }

        /* NAVBAR */
        .navbar {
            background: linear-gradient(90deg,var(--brand-1),var(--brand-2));
            box-shadow: 0 6px 18px rgba(0,0,0,.08);
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: 700;
            letter-spacing: .5px;
            transition: transform .25s ease;
        }

            .navbar-brand:hover {
                transform: translateY(-1px) scale(1.02);
            }

        .navbar-dark .navbar-toggler {
            border-color: rgba(255,255,255,.35);
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            position: relative;
            padding: .5rem .75rem;
            transition: transform .25s ease, color .25s ease;
        }

            .navbar-nav .nav-link::after {
                content: '';
                position: absolute;
                left: .5rem;
                right: .5rem;
                bottom: .2rem;
                height: 2px;
                background: var(--accent);
                transform: scaleX(0);
                transform-origin: left;
                transition: transform .3s ease;
            }

            .navbar-nav .nav-link:hover {
                color: #fff !important;
                transform: translateY(-1px);
            }

                .navbar-nav .nav-link:hover::after,
                .navbar-nav .nav-link.active::after {
                    transform: scaleX(1);
                }

        /* SAYFA GEÇİŞİ + SCROLL ANİMASYONLARI */
        .page-content {
            animation: fadeInUp .6s ease both;
        }

        .page-exit {
            animation: fadeOutLeft .4s ease both;
        }

        /* Razor sebebiyle @@keyframes kullanıyoruz */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(28px)
            }

            to {
                opacity: 1;
                transform: translateY(0)
            }
        }

        @@keyframes fadeOutLeft {
            from {
                opacity: 1;
                transform: translateX(0)
            }

            to {
                opacity: 0;
                transform: translateX(-24px)
            }
        }

        /* Scroll ile ortaya çıkan elemanlar */
        .reveal {
            opacity: 0;
            transform: translateY(18px);
            transition: opacity .6s ease, transform .6s ease;
        }

            .reveal.is-visible {
                opacity: 1;
                transform: none;
            }

        /* Kart & buton hover “abartı” efektleri :) */
        .card {
            border: 0;
            border-radius: 20px;
            box-shadow: 0 10px 24px rgba(34,40,65,.06);
            transition: transform .25s ease, box-shadow .25s ease;
        }

            .card:hover {
                transform: translateY(-6px);
                box-shadow: 0 18px 36px rgba(34,40,65,.10);
            }

        .btn {
            border-radius: 14px;
            transition: transform .15s ease, box-shadow .2s ease, background-color .2s ease;
        }

            .btn:hover {
                transform: translateY(-1px);
                box-shadow: 0 8px 18px rgba(0,0,0,.08);
            }

        .btn-primary {
            background: linear-gradient(135deg,var(--brand-2),var(--brand-1));
            border: 0;
        }

        .btn-outline-secondary:hover {
            background: #fff;
        }

        footer {
            background: #ffffffaa;
            backdrop-filter: saturate(140%) blur(6px);
            border-radius: 16px;
            padding: 14px 18px;
            margin-top: 48px;
            box-shadow: 0 -8px 24px rgba(0,0,0,.04);
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">Biography</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Hakkımda</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Projects">Projelerim</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">İletişim</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ANA İÇERİK -->
    <main id="page" class="container page-content">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="text-center text-muted">
        &copy; @DateTime.Now.Year Biography
    </footer>

    <!-- SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- React (Projeler sayfasındaki küçük bileşen için) -->
    <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>

    <script>
        (function () {
            // Aktif menü linkini vurgula
            const path = location.pathname.toLowerCase();
            document.querySelectorAll('.navbar .nav-link').forEach(a => {
                const href = a.getAttribute('href') || '';
                if (href && href.toLowerCase() === path) a.classList.add('active');
                if (href === '/' && (path === '/' || path === '/home' || path === '/home/index')) a.classList.add('active');
            });

            // Sayfa çıkış animasyonu ile geçiş (iç linklerde)
            const page = document.getElementById('page');
            document.querySelectorAll('a.nav-link, a.navbar-brand').forEach(a => {
                a.addEventListener('click', function (e) {
                    const href = this.getAttribute('href');
                    if (!href) return;
                    // Yeni sekme, hash veya farklı domain ise dokunma
                    if (this.target === '_blank' || href.startsWith('#')) return;
                    try {
                        const url = new URL(href, location.origin);
                        if (url.origin !== location.origin) return;
                    } catch { /* relative olabilir */ }

                    e.preventDefault();
                    page.classList.add('page-exit');
                    setTimeout(() => { window.location.href = href; }, 380);
                });
            });

            // Basit "scroll reveal"
            const io = new IntersectionObserver((entries) => {
                entries.forEach(en => {
                    if (en.isIntersecting) {
                        en.target.classList.add('is-visible');
                        io.unobserve(en.target);
                    }
                });
            }, { threshold: 0.12 });

            // Otomatik olarak bazı elemanlara reveal uygula
            document.querySelectorAll('.page-content .row > [class*="col"], .page-content .card, .page-content img, .page-content h1, .page-content h2, .page-content p')
                .forEach(el => { el.classList.add('reveal'); io.observe(el); });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
