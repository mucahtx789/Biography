<!DOCTYPE html>
<html lang="tr">
<head>

    <meta name="description" content="Yazılım geliştirici Mücahit Demir’in kişisel portföyü.">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Mücahit Demir - Yazılım Geliştirici">
    <meta property="og:description" content="ASP.NET Core, Vue.js, C#, SQL projeleri ve yazılım portföyü.">
    <meta property="og:url" content="https://mucahitd.com.tr">
    <meta property="og:image" content="https://mucahitd.com.tr/images/profile.jpg">
    <meta property="og:image:width" content="600">
    <meta property="og:image:height" content="600">

    <!-- JSON-LD Structured Data -->
   <script type="application/ld+json">
        @Html.Raw(@"{
  ""@context"": ""https://schema.org"",
  ""@type"": ""Person"",
  ""name"": ""Mücahit Demir"",
  ""url"": ""https://mucahitd.com.tr"",
  ""image"": ""https://mucahitd.com.tr/images/profile.jpg"",
  ""sameAs"": [
    ""https://github.com/mucahtx789"",
    ""https://www.linkedin.com/in/mücahit-demir-a68508202/""
  ],
  ""jobTitle"": ""Yazılım Geliştirici"",
  ""description"": ""ASP.NET Core, Vue.js ve C# geliştiricisi. Web uygulamaları, API ve frontend projeleri.""
}")
</script>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4M48PV5SK6"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-4M48PV5SK6');
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- AOS Animations -->
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />


    <!-- icon -->
    <link rel="icon" type="image/png" sizes="128x128" href="/icons/favicon-128x128.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/icons/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png">
    <link rel="icon" type="image/ico" href="/favicon.ico">

    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <!-- Scroll ilerleme çubuğu -->
    <div id="scroll-progress"></div>

    <!-- Arka plan animasyonu -->
    <div id="background"></div>

    <main class="container py-5">
        @RenderBody()
    </main>

    <footer class="text-center mt-5 py-3 text-white-50">
        &copy; @DateTime.Now.Year Mücahit Demir
    </footer>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>

    <script>
        // AOS başlat
        AOS.init({ duration: 1000, once: true });

        // Scroll ilerleme çubuğu
        window.addEventListener('scroll', () => {
            const scrollTop = window.scrollY;
            const docHeight = document.body.scrollHeight - window.innerHeight;
            const progress = (scrollTop / docHeight) * 100;
            document.getElementById('scroll-progress').style.width = progress + '%';
        });
    </script>
    
    <script src="~/js/site.js"></script>
    <script src="~/js/background.js"></script>
    @RenderSection("Scripts", required: false)
    
</body>
<footer class="footer mt-auto py-3 bg-light ">
    <div class="container text-center wcontent">
        <span >
            &copy; 2025 Mücahit Demir |
            <a href="@Url.Action("Index", "Privacy")">Privacy Policy</a>
            <a href="mailto:info@mucahitd.com.tr" class="ms-2">
                | info@mucahitd.com.tr
            </a>
        </span>
    </div>
</footer>
</html>
