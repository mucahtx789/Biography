@section Scripts {
        <script>
            $(function () {
                $("#contactForm").on("submit", function (e) {
                    e.preventDefault();
                    const btn = $(this).find("button[type='submit']");
                    btn.prop("disabled", true).text("Gönderiliyor...");
                    setTimeout(() => {
                        $("#formOk").removeClass("d-none");
                        btn.prop("disabled", false).text("Gönder");
                        this.reset();
                    }, 800);
                });
            });
        </script>
}
